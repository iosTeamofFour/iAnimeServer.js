{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "incremental": true,
        "tsBuildInfoFile": ".tsIncrement"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/types/*"
    ]
}